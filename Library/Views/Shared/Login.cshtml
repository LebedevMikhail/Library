@model LoginModel
@{
    ViewBag.Title = "Авторизация";
    Layout = "_Layout";
}
<div class="body-content">

    <div class="text-danger" asp-validation-summary="All"></div>

    <form asp-action="Login" asp-controller="Account" method="post">
        <div class="form-group">
            <label asp-for="Name">Имя пользователя</label>
            <div><span asp-validation-for="Name" class="text-danger"></span></div>
            <input asp-for="Name" class="form-control" value="Admin" />
        </div>
        <div class="form-group">
            <label asp-for="Password">Пароль</label>
            <div><span asp-validation-for="Password" class="text-danger"></span></div>
            <input asp-for="Password" class="form-control" value="Secret123$" />
        </div>
        <button class="btn btn-primary" type="submit">Войти</button>
    </form>
</div>