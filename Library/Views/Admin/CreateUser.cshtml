@model Library.Models.ViewModels.CreateModel;
@{
    ViewBag.Title = "Создание пользователя";
    Layout = "_Layout";
}
<div asp-validation-summary="All" class="text-danger body-content"></div>
<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="Name">Имя пользователя</label>
        <input asp-for="Name" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Password">Пароль</label>
        <input asp-for="Password" class="form-control" />
    </div>
    <button type="submit" class="btn btn-primary">Создать</button>
    <a asp-action="Index" class="btn btn-default">Отмена</a>
</form>