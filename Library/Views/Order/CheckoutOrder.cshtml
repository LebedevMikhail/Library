@{
    Layout = "_Layout";
}
@if (Model != null)
{
    <div class="body-content">
        <h2>Проверьте заявку</h2>
        @*<div asp-validation-summary="All" class="text-danger"></div>*@
        <form asp-action="Checkout" method="post">
            <input type="hidden" asp-for="OrderID" />
            <div class="form-group">
                <label>Имя пользователя:</label>
                <input asp-for="Name" class="form-control" value="@User.Identity.Name" />
            </div>
            <div>
                <input asp-for="Status" class="form-control" type="hidden" value="0" />
            </div>
            @*<div>
                    <label>Книги:</label>
                    @foreach (var book in ViewBag.Orders)
                    {
                        <h3>@book</h3>
                    }
                </div>*@
            <div class="form-group">
                <label>Срок использования:</label>
                <div>
                    <span asp-validation-for="TermUse" class="text-danger"></span>
                </div>
                <input type="date" asp-for="TermUse" class="form-control" value="@ViewBag.DateTodayString" min="@ViewBag.DateToday" />
            </div>
            <input type="hidden" asp-for="DateCreate" value="@ViewBag.DateToday" />
            <div class="text-center">
                <input class="btn btn-primary" type="submit" value="Завершить заявку" />
            </div>
        </form>
    </div>
}