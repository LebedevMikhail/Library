@model IEnumerable<Microsoft.AspNetCore.Identity.IdentityRole>
@{
    ViewBag.Title = "Роли";
    Layout = $"_Layout";
}
<div class="body-content">

    <div class="text-danger" asp-validation-summary="ModelOnly"></div>

    <table class="table table-condensed table-bordered table-bordered">
        <tr><th>ID</th><th>Имя роли</th><th>Пользователи</th><th></th></tr>
        @if (Model.Count() == 0)
        {
            <tr><td colspan="4" class="text-center">Нет ролей</td></tr>
        }
        else
        {
            foreach (var role in Model)
            {
                <tr>
                    <td>@role.Id</td>
                    <td>@role.Name</td>
                    <td identity-role="@role.Id"></td>
                    <td>
                        <form asp-action="Delete" asp-route-id="@role.Id" method="post">
                            <a class="btn btn-sm btn-primary" asp-action="Edit"
                               asp-route-id="@role.Id">Редактировать состав</a>
                            <button type="submit"
                                    class="btn btn-sm btn-danger">
                                Удалить роль
                            </button>
                        </form>
                    </td>
                </tr>
            }
        }
    </table>
    <a class="btn btn-primary" asp-action="Create">Создать</a>
</div>